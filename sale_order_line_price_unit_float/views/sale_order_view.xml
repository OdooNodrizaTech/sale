<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_line_price_unit_float_view_order_form" model="ir.ui.view">
        <field name="name">sale_order_line_price_unit_float_view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='order_line']/tree/field[@name='price_unit']" position="replace">
                <field name="price_unit" widget="monetary" />
            </xpath>                                                                        
        </field>
    </record>

</odoo>
