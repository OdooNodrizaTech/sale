<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_pricelist_id_update_line_prices_button" model="ir.ui.view">
        <field name="name">sale_order_pricelist_id_update_line_prices_button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="order_line" position="after">
                <button name="action_update_lines_prices_pricelist" type="object" string="Actualizar precios tarifa" class="oe_highlight" attrs="{'invisible': [('state','not in', ['draft', 'send'])]}" help="Se actualizaran los precios unitarios de todas las lineas segun la cantidad de cada linea y el precio correspondiente respecto a la tarifa definida en el presupuesto" />
            </field>
        </field>
    </record>
</odoo>