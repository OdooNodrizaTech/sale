<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_quote_template_child_view_order_form" model="ir.ui.view">
        <field name="name">sale_quote_template_child_view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="total_cashondelivery" position="after">
                <label for="template_child_id" attrs="{'invisible': [('claim','=',True)]}"/>
                <div>
                    <field name="template_child_id" options="{'no_create': True, 'no_open': True}" domain="[('template_id', '=', template_id)]" attrs="{'invisible': [('claim','=',True)]}" />
                </div>
            </field>                                                            
        </field>
    </record>    
</odoo>
